{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["jest", "node"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "integration/**/*",
    "performance/**/*",
    "security/**/*",
    "accessibility/**/*",
    "mocks/**/*",
    "tools/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "reports"
  ]
}